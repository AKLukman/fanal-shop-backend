{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",             // ✅ Allow both src and prisma
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "prisma"], // ✅ Include Prisma schema + generated files
  "exclude": ["node_modules"]
}
